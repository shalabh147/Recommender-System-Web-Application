	<form class="nav-bar" action="http://localhost:3000/admin/search" method="POST">
		<div class="search-container" href=#home>
			<div class="group">
				<label for="search" class="label"></label>
				<input id="search" name="search" placeholder="search..." type="text" class="input" >
			</div>
		  	<i class="fa fa-search"></i>
		</div>
	</form>

<table style="width:100%">
	<tr>
		<% for(var i=0; i<list1.length; i++){ %> 
		<th>
			<div class="movie-card">
				<div class="face face1">
					<div class="content">
						<!-- <img src="https://github.com/Jhonierpc/WebDevelopment/blob/master/CSS%20Card%20Hover%20Effects/img/design_128.png?raw=true"> -->
						<h3><%= list1[i].title %></h3>
						<h4><%= list1[i].releaseDate %></h4>
						<h4><%= list1[i].language %></h4>                  
					</div>
				</div>
				<div class="face face2">
					<div class="content">
							 <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cum cumque minus iste veritatis provident at.</p> -->
								<a href="#">More Info</a>
								<a href="#">Watch Now</a>
								<a href="#">Give Rating</a>
					</div>
				</div>
			</div>
		</th>
		<% } %>
	</tr>
</table>
</div>
</body>