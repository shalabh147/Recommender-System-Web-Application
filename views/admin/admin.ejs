<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="home.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="parallax">
    <nav class="page__menu page__custom-settings menu">
      <ul class="menu__list r-list">
        <form class="nav-bar" action="http://localhost:3000/admin/home" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Home</button></li></form>
        <form class="nav-bar" action="http://localhost:3000/admin/search" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Search</button></li></form>
        <form class="nav-bar" action="http://localhost:3000/admin/profile" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">My profile</button></li></form>
        <form class="nav-bar" action="http://localhost:3000/admin/admin" method="POST"><li class="menu__group"><button class="menu__link r-link text-underlined">Admin</button></li></form>
        <form class="nav-bar" action="http://localhost:3000/admin/login" method="POST"><li class="menu__group"><button class="menu__link r-link text-underlined">Logout</button></li></form>
      </ul>
    </nav>

  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Add Movie</label>
      <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Remove Movie</label>
      <div class="login-form">
        <div class="sign-in-htm">
        <form class="sign-in-htm" action="http://localhost:3000/admin/admin" method="POST">
          <div class="group">
            <label for="title" class="label">Title</label>
            <input id="title" name="title" type="text" class="input">
          </div>
          <div class="group">
            <label for="genre" class="label">Genre</label>
            <input id="genre" name="genre" type="text" class="input">
          </div>
          <div class="group">
            <label for="Language" class="label">Language</label>
            <input id="Language" name="Language" type="text" class="input">
          </div>
          <div class="group">
            <label for="actor1" class="label">Actor 1</label>
            <input id="actor1" name = "actor1" type="text" class="input">
          </div>
          <div class="group">
            <label for="actor2" class="label">Actor 2</label>
            <input id="actor2" name = "actor2" type="text" class="input">
          </div>
          <div class="group">
            <label for="director" class="label">Director</label>
            <input id="director" name = "director" type="text" class="input">
          </div>
          <div class="group">
            <label for="release_date" class="label">Release Date(YYYY-DD-MM)</label>
            <input id="release_date" name = "release_date" type="date" class="input">
          </div>
          <div class="group">
            <label for="duration" class="label">Duration</label>
            <input id="duration" name="duration" type="float" class="input">
          </div>
          <button class="btn" type="submit">Add Movie</button>
          <input type="hidden" name="indicator" id="indicator" value = "add">
        </form>
        </div>
        <div class="sign-up-htm">
        <form class="sign-in-htm" action="http://localhost:3000/admin/admin" method="POST">
          <div class="group">
            <label for="title" class="label">Title</label>
            <input id="title" name = "title" type="text" class="input">
          </div>
          <div class="group">
            <label for="release_date" class="label">Release Date(YYYY-DD-MM)</label>
            <input id="release_date" name = "release_date" type="date" class="input">
          </div>
          <input type="hidden" name="indicator" id="indicator" value = "remove">
          <button class="btn" type="submit">Remove Movie</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img src="https://visme.co/blog/wp-content/uploads/2017/07/Bar-Graphs.jpg" alt="Los Angeles" style="width:100%;">
          <div class="carousel-caption">
            <h3>Los Angeles</h3>
            <p>LA is always so much fun!</p>
          </div>
        </div>

        <div class="item">
          <img src="https://visme.co/blog/wp-content/uploads/2017/07/Bar-Graphs.jpg" alt="Chicago" style="width:100%;">
          <div class="carousel-caption">
            <h3>Chicago</h3>
            <p>Thank you, Chicago!</p>
          </div>
        </div>
      
        <div class="item">
          <img src="https://visme.co/blog/wp-content/uploads/2017/07/Bar-Graphs.jpg" alt="New York" style="width:100%;">
          <div class="carousel-caption">
            <h3>New York</h3>
            <p>We love the Big Apple!</p>
          </div>
        </div>
    
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>


</div>
</body>