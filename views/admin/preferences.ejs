<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="parallax">
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Preferences</label>
      <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
      <div class="login-form">
        <form class="sign-in-htm" action="http://localhost:3000/admin/preferences" method="POST">
          <div class="sign-in-htm">
          <div class="group">
            <label for="user" class="label">Language Preference-1</label>
            <input list="languages" name="langpref_1"  id="langpref_1" class="input" >
            <datalist id="languages"> 
              <% for(var i =0; i<list1.length; i++) {%>
                <option value=<%= list1[i].language %> />
              <% } %>
            </datalist>
          </div>
          <div class="group">
            <label for="user" class="label">Language Preference-2</label>
            <input list="languages" name="langpref_2"  id="langpref_2" class="input" >
            <datalist id="languages"> 
              <% for(var i =0; i<list1.length; i++) {%>
                <option value=<%= list1[i].language %> />
              <% } %>
            </datalist>
          </div>
          <div class="group">
            <label for="user" class="label">Genre Preference-1</label>
            <input list="genres" name="genrepref_1" id="genrepref_1" class="input" >
            <datalist id="genres"> 
              <% for(var i =0; i<list2.length; i++) {%>
                <option value=<%= list2[i].genreid %> ><%= list2[i].genrename %></option>
              <% } %>
            </datalist>
          </div>
          <div class="group">
            <label for="user" class="label">Genre Preference-2</label>
            <input list="genres" name="genrepref_2" id="genrepref_2" class="input" >
            <datalist id="genres"> 
              <% for(var i =0; i<list2.length; i++) {%>
                <option value=<%= list2[i].genreid %> ><%= list2[i].genrename %></option>
              <% } %>
            </datalist>
          </div>
          <button class="btn" type="submit">Confirm Changes</button>
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
</body>