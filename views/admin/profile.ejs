<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="profile.css">
</head>
<body>
<div class = "parallax">
<nav class="page__menu page__custom-settings menu">
	<ul class="menu__list r-list">
		<form class="nav-bar" action="http://localhost:3000/admin/home" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Home</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/search" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Search</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/profile" method="POST"><li class="menu__group"><button class="menu__link r-link text-underlined">My profile</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/login" method="POST"><li class="menu__group"><button class="menu__link r-link text-underlined">Admin</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/login" method="POST"><li class="menu__group"><button class="menu__link r-link text-underlined">Logout</button></li></form>
	</ul>
</nav>
  <div class="login-wrap">
	<div class="login-html">
	  <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Personal Info</label>
	  <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Edit </label>
	  <div class="login-form">
		<div class="sign-in-htm">
		<h1><%= list.name %></h1>
		<h2>Username</h2>
		<h1><%= list.username %></h1>
		<h2>Email ID:</h2>
		<h1><%= list.email_id %></h1>
		<h2>Your Preferred Languages:</h2>
		<h1><%= list.language_pref1 %></h1>
		<h1><%= list.language_pref2 %></h1>
		<h2>Your Preferred Genres:</h2>
		<h1><%= genre1 %></h1>
		<h1><%= genre2 %></h1>

		</div>
		<div class="signup-form">
			<form class="sign-in-htm" action="http://localhost:3000/admin/profile" method="POST">
				<div class="group">
				<label for="username" class="label">Username</label>
				<input id="username" name="username" type="text" class="input"  placeholder=<%= list.username %>>
				</div>
				<div class="group">
				<label for="name" class="label">Name</label>
				<input id="name" name="name" type="text" class="input" placeholder=<%= list.name %>>
				</div>
				<div class="group">
				<label for="email_id" class="label">Email id</label>
				<input id="email_id" name="email_id" type="text" class="input" placeholder=<%= list.email_id %>>
				</div>
				<div class="group">
				<label for="password" class="label">Password</label>
				<input id="password" name="password" type="password" class="input" data-type="password" placeholder=<%= list.username %>>
				</div>
				<div class="group">
				<label for="language_pref1" class="label">Language 1</label>
				<input id="language_pref1" name="language_pref1" type="text" class="input" placeholder=<%= list.language_pref1 %>>
				</div>
				<div class="group">
					<label for="language_pref2" class="label">Language 2</label>
					<input id="language_pref2" name="language_pref2" type="text" class="input" placeholder=<%= list.language_pref2%>>
				</div>
				<div class="group">
					<label for="genre_1" class="label">Genre 1</label>
					<input id="genre_1" name="genre_1" type="text" class="input" placeholder=<%= list.genre1 %>>
				</div>
				<div class="group">
					<label for="genre_2" class="label">Genre 2</label>
					<input id="genre_2" name="genre_2" type="text" class="input" placeholder=<%= list.genre2 %>>
				</div>
				<button class="btn" type="submit">Confirm Changes</button>
			</form>
		
		</div>
	  </div>
	</div>
  </div>
  <div class="scrollmenu">
	<h1><b>YOUR FRIENDS</b></h1>
	<% for(var i=0; i<list1.length; i++){ %> 
		<!-- <div class="container"> -->
		<div class="friend-card">
			<div class="face face1">
				<div class="content">
					<h2>Friend Name</h2>
					<h3>list1[i].name</h3>
				</div>
			</div>
			<div class="face face2">
				<div class="content">
						<h2>list1[i].last_watched</h2>
						<h2><% if(list1[i].login) %> online <% else %> offline</h2>
						<a href="#">Remove Friend</a>
				</div>
			</div>
		</div>
	<!-- </div> -->
	<% } %>
  </div>

  <div class="scrollmenu">
	<h1><b>Search for people</b></h1>
	<form class="nav-bar" action="http://localhost:3000/admin/profile" method="POST">
		<div class="search-container" href=#home>
			<div class="group">
				<label for="search" class="label"></label>
				<input id="search" name="search" placeholder="search..." type="text" class="input" >
			</div>
		  	<i class="fa fa-search"></i>
		</div>
	</form>


	   <% for(var i=0; i<list2.length; i++){ %> 
		<!-- <div class="container"> -->
			<div class="friend-card">
				<div class="face face1">
					<div class="content">
						<h2>Friend Name</h2>
						<h3>list2[i].name</h3>
					</div>
				</div>
				<div class="face face2">
					<div class="content">
							<h2>list2[i].last_watched</h2>
							<h2><% if(list2[i].login) %> online <% else %> offline</h2>
							<a href="#">Remove Friend</a>
					</div>
				</div>
			</div>
		<% } %>
		
	<!-- </div> -->
  </div>

</body>