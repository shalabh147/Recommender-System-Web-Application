<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
<div class = "parallax">
<nav class="page__menu page__custom-settings menu">
	<ul class="menu__list r-list">
		<form class="nav-bar" action="http://localhost:3000/admin/home" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Home</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/search" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">Search</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/profile" method="GET"><li class="menu__group"><button class="menu__link r-link text-underlined">My profile</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/admin" method="get"><li class="menu__group"><button class="menu__link r-link text-underlined">Admin</button></li></form>
		<form class="nav-bar" action="http://localhost:3000/admin/logout" method="get"><li class="menu__group"><button class="menu__link r-link text-underlined">Logout</button></li></form>
	</ul>
</nav>
  <div class="login-wrap">
	<div class="login-html">
	  <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Personal Info</label>
	  <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
	  <div class="login-form">
		<div class="sign-in-htm">
		<h1><%= list[0].name %></h1>
		<h2>Username:</h2>
		<h1><%= list[0].username %></h1>
		<h2>Email ID:</h2>
		<h1><%= list[0].email_id %></h1>
		<h2>Your Preferred Languages:</h2>
		<h1><%= list[0].language_pref1 %></h1>
		<h1><%= list[0].language_pref2 %></h1>
		<h2>Your Preferred Genres:</h2>
		<h1><%= genre1 %></h1>
		<h1><%= genre2 %></h1>

		</div>
	  </div>
	</div>
  </div>
  
<div class="scrollmenu">
	<h1><b>Your Friends</b></h1>
	<div class="container">
	   <% for(var i=0; i<list1.length; i++){ %> 
  
		<div class="movie-card">
			<div class="face face1">
				<div class="content">
					<!-- <img src="https://github.com/Jhonierpc/WebDevelopment/blob/master/CSS%20Card%20Hover%20Effects/img/design_128.png?raw=true"> -->
					<h3><%= list1[i].name %></h3>
					<h4><%= list1[i].username %></h4>
					<h4><% if(list1[i].login) { %> online <% } else { %> offline<% } %></h4>
					<!-- <h4><%= list1[i].language %></h4>                   -->
				</div>
			</div>
			<div class="face face2">
				<div class="content">
						 <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cum cumque minus iste veritatis provident at.</p> -->
							<h2>Last watched: <%= list1[i].mov_title%></h2>
							<form action="/admin/profile" method="post">
								<button class="btn" type="submit">Remove Friend</button>
								<input type="hidden" name="indic" id="indic" value="z">
								<input type="hidden" name="friend_id" id="friend_id" value=<%=list1[i].username%>>
							</form>
				</div>
			</div>
		</div>
		<% } %>
	</div>
</div>
  
  <div class="scrollmenu">
	<h1><b>Search for people</b></h1>
	<form class="nav-bar" action="http://localhost:3000/admin/profile" method="POST">
		<input type="hidden" name="indic" id="indic" value="n">
		<div class="search-container" href=#home>
			<div class="group">
				<label for="search" class="label"></label>
				<input id="search" name="search" placeholder="search..." type="text" class="input" >
			</div>
		  	<i class="fa fa-search"></i>
		</div>
	</form>

	<div class="container">
	   <% for(var i=0; i<list2.length; i++){ %> 
		<!-- <div class="container"> -->
			<div class="movie-card">
				<div class="face face1">
					<div class="content">
						<!-- <img src="https://github.com/Jhonierpc/WebDevelopment/blob/master/CSS%20Card%20Hover%20Effects/img/design_128.png?raw=true"> -->
						<h3><%= list2[i].name %></h3>
						<h4><%= list2[i].username %></h4>
						<h4><% if(list2[i].login) { %> online <% } else { %> offline<% } %></h4>
						<!-- <h4><%= list2[i].language %></h4>                   -->
					</div>
				</div>
				<div class="face face2">
					<div class="content">
							 <!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cum cumque minus iste veritatis provident at.</p> -->
								<h2>Last watched: <%= list2[i].mov_title%></h2>
								 <form action="/admin/profile" method="post">
									<button class="btn" type="submit">Add Friend</button>
									<input type="hidden" name="indic" id="indic" value="y">
									<input type="hidden" name="friend_id" id="friend_id" value=<%=list2[i].username%>>
								</form>
					</div>
				</div>
			</div>
		<% } %>
	</div>
	<!-- </div> -->
  </div>

</body>